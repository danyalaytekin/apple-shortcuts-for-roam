{
	"info": {
		"name": "Roam's web API",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Get by id",
			"protocolProfileBehavior": {
				"disabledSystemHeaders": {
					"user-agent": true
				},
				"followAuthorizationHeader": true,
				"disableCookies": true
			},
			"request": {
				"method": "POST",
				"header": [],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"eid\": \"[:block/uid \\\"some-block-id\\\"]\",\n    \"selector\": \"[:block/string]\"\n}",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "{{API_URL_BASE}}/{{GRAPH_NAME}}/pull",
					"host": [
						"{{API_URL_BASE}}"
					],
					"path": [
						"{{GRAPH_NAME}}",
						"pull"
					]
				}
			},
			"response": []
		},
		{
			"name": "Write text by id",
			"protocolProfileBehavior": {
				"disabledSystemHeaders": {
					"user-agent": true
				},
				"followAuthorizationHeader": true,
				"disableCookies": true
			},
			"request": {
				"method": "POST",
				"header": [],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"action\" : \"update-block\", \n    \"block\": {\n        \"uid\": \"some-block-id\",\n        \"string\": \"Intended text\"\n    }\n}",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "{{API_URL_BASE}}/{{GRAPH_NAME}}/write",
					"host": [
						"{{API_URL_BASE}}"
					],
					"path": [
						"{{GRAPH_NAME}}",
						"write"
					]
				}
			},
			"response": []
		}
	],
	"auth": {
		"type": "bearer",
		"bearer": [
			{
				"key": "token",
				"value": "some-graph-api-key",
				"type": "string"
			}
		]
	},
	"event": [
		{
			"listen": "prerequest",
			"script": {
				"type": "text/javascript",
				"exec": [
					""
				]
			}
		},
		{
			"listen": "test",
			"script": {
				"type": "text/javascript",
				"exec": [
					""
				]
			}
		}
	],
	"variable": [
		{
			"key": "GRAPH_NAME",
			"value": "some-graph-name",
			"type": "string"
		},
		{
			"key": "API_URL_BASE",
			"value": "https://api.roamresearch.com/api/graph",
			"type": "string"
		}
	]
}